#Simple Calculator

#Add
def add(n1, n2):
  return n1 + n2

#Subtract
def subtract(n1, n2):
  return n1 - n2

#Multiply
def multiply(n1, n2):
  return n1 * n2

#Divide
def divide(n1, n2):
  return n1 / n2

operations = {
  "+": add,
  "-": subtract,
  "*": multiply,
  "/": divide,
}

keep_going = True
num1 = int(input("What is the first number?: "))
for op in operations:
  print(op)

while keep_going:
  symbol = input("Pick an operation: ")
  calculation = operations[symbol]
  num2 = int(input("What is the next number?: "))
  answer = calculation(num1, num2)
  print(f"{num1} {symbol} {num2} = {answer}")
  again = input("Do you wish to continue calculation? Type 'y' for Yes, 'n' for No: ")
  if again == 'y':
    num1 = answer
  if again == 'n':
    keep_going = False
    print("The calculator has terminated.")
